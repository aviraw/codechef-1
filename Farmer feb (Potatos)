#include <iostream>
using namespace std;

int main()
{
    int t,x,y,a,z,count;
    cin>>t;
    for(int i=0;i<t;i++)
    {
        cin>>x>>y;
        z=x+y;
        a=x+y;
        
        aa:
        z++;
        int count = 0;
        for(int j=2;j<z;j++)
        {
        if(z%j==0)
        count++;
        }
        
        if(count>0)
        goto aa ;
        
        
        else
        cout<<z-a<<endl;
        
    }
    return 0;
}
