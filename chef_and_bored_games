#include <iostream>
using namespace std;
int main()
{
    int t=0,total=0,n=0;
    cin>>t;
    for(int i=0;i<t;i++)
    {
        cin>>n;
        
        int arr[n]={0};
        
        for(int j=n;j>=1;j-=2)
        {
            arr[j]=j*j;
            total+=arr[j];
        }
        cout<<total<<endl;
        total=0;
    }

    return 0;
}
